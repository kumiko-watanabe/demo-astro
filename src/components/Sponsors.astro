---

<section id="sponsors" class="py-20 px-4 bg-gray-800">
  <div class="container mx-auto text-center">
    <h2 class="text-4xl font-bold mb-16 text-white">Sponsors</h2>
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-y-12 gap-x-8 items-start">
      {sponsors.map(sponsor => (
        <div class="flex flex-col items-center gap-4">
          <div class="w-24 h-24 flex items-center justify-center">
             <svg class="w-full h-full" viewBox="0 0 24 24">
              {sponsor.logo.map(part => (
                <path d={part.d} fill={part.fill}></path>
              ))}
            </svg>
          </div>
          <p class="text-sm text-gray-300 font-semibold">{sponsor.name}</p>
        </div>
      ))}
    </div>
  </div>
</section>
