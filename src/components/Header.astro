<header class="fixed top-0 left-0 w-full p-4 bg-black bg-opacity-50 z-50">
  <nav class="container mx-auto flex justify-between items-center">
    <div class="text-white font-bold text-xl"><a href="/">IT CONFERENCE 2024</a></div>
    <ul class="hidden md:flex space-x-8">
      <li><a href="#about" class="text-white font-bold hover:text-gray-300">About</a></li>
      <li><a href="#features" class="text-white font-bold hover:text-gray-300">Features</a></li>
      <li><a href="#highlights" class="text-white font-bold hover:text-gray-300">Highlights</a></li>
      <li><a href="#schedule" class="text-white font-bold hover:text-gray-300">Schedule</a></li>
      <li><a href="#floormap" class="text-white font-bold hover:text-gray-300">Map</a></li>
      <li><a href="#faq" class="text-white font-bold hover:text-gray-300">FAQ</a></li>
      <li><a href="#contact" class="text-white font-bold hover:text-gray-300">Contact</a></li>
    </ul>
    <button id="menu-btn" class="md:hidden relative w-8 h-8 z-50">
        <span class="line line1"></span>
        <span class="line line2"></span>
        <span class="line line3"></span>
    </button>
  </nav>
</header>

<div id="menu" class="hidden fixed inset-0 bg-gray-950 z-40 flex flex-col items-center justify-center">
    <ul class="flex flex-col items-center space-y-8 text-3xl">
        <li><a href="#about" class="text-white font-bold hover:text-teal-400 transition-colors">About</a></li>
        <li><a href="#features" class="text-white font-bold hover:text-teal-400 transition-colors">Features</a></li>
        <li><a href="#highlights" class="text-white font-bold hover:text-teal-400 transition-colors">Highlights</a></li>
        <li><a href="#schedule" class="text-white font-bold hover:text-teal-400 transition-colors">Schedule</a></li>
        <li><a href="#floormap" class="text-white font-bold hover:text-teal-400 transition-colors">Map</a></li>
        <li><a href="#faq" class="text-white font-bold hover:text-teal-400 transition-colors">FAQ</a></li>
        <li><a href="#contact" class="text-white font-bold hover:text-teal-400 transition-colors">Contact</a></li>
    </ul>
</div>

<style>
  .line {
    position: absolute;
    display: block;
    width: 24px;
    height: 2px;
    background-color: white;
    left: 4px;
    transition: transform 0.3s ease-in-out, opacity 0.3s ease-in-out;
    transform-origin: center;
  }
  .line1 { top: 8px; }
  .line2 { top: 15px; }
  .line3 { top: 22px; }

  #menu-btn.menu-open .line1 {
    transform: translateY(7px) rotate(45deg);
  }
  #menu-btn.menu-open .line2 {
    opacity: 0;
  }
  #menu-btn.menu-open .line3 {
    transform: translateY(-7px) rotate(-45deg);
  }
</style>

<script>
  const menuBtn = document.getElementById('menu-btn');
  const menu = document.getElementById('menu');
  const menuLinks = menu.querySelectorAll('a');
  
  function toggleMenu() {
    const isMenuOpen = menu.classList.toggle('hidden');
    menuBtn.classList.toggle('menu-open');
    document.body.style.overflow = isMenuOpen ? '' : 'hidden';
  }
  
  function closeMenu() {
    if (!menu.classList.contains('hidden')) {
      toggleMenu();
    }
  }

  menuBtn.addEventListener('click', toggleMenu);
  menuLinks.forEach(link => {
    link.addEventListener('click', closeMenu);
  });
</script>
